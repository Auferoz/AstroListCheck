---
import DeviceGamepad2 from '@/components/icons/device-gamepad-2.astro';
import Home from '@/components/icons/home.astro';
import Meteor from '@/components/icons/meteor.astro';
import Plus from './icons/plus.astro';
---

<nav class="bg-white border-gray-200 dark:bg-gray-900">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
      <span class="self-center text-2xl flex items-center font-semibold whitespace-nowrap dark:text-white">
        <Meteor /> 
         Astro List Check</span>
    </a>
    <button data-collapse-toggle="navbar-default" type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default" aria-expanded="false">
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
        <li>
          <a href="/"
            class="flex py-2 px-3 rounded md:bg-transparent text-white bg-slate-700 md:text-slate-500 md:p-0">
            <Home class="pr-1" /> Home
          </a>
        </li>
        <li>
          <a href="/games2024"
            class="flex py-2 px-3 rounded md:bg-transparent text-white bg-slate-700 md:text-slate-500 md:p-0">
            <DeviceGamepad2 class="pr-1" /> Games
          </a>
        </li>
        <li>
          <a href="/addgame"
            class="flex py-2 px-3 rounded md:bg-transparent text-white bg-slate-700 md:text-slate-500 md:p-0">
            <Plus class="pr-1" /> Games
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>