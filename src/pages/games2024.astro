---
import Aside from '@/components/Aside.astro';
import Card from '@/components/Card.astro';
import CornerDownRight from '@/components/icons/corner-down-right.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Games 2024 | ALC">
	<main class="container mx-auto p-16">
		<section class="pb-10">
			<h1 class="text-3xl font-sans font-normal flex items-center">
				<CornerDownRight />
				Games List <span class="text-xl font-light ps-2">2024</span>
			</h1>
		</section>
		<section class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
			<Card />
		</section>
	</main>
</Layout>